<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tn.medtech.lab5.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="252dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_city"
        android:layout_marginTop="31dp"
        android:text="Weather Forecast"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/txt_humidity"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:hint="City"
        android:text="Humidity"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="293dp"
        android:layout_below="@+id/txt_press"
        android:layout_alignStart="@+id/txt_press"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/txt_press"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/txt_status"
        android:layout_below="@+id/txt_status"
        android:layout_marginTop="54dp"
        android:background="@color/colorPrimaryDark"
        android:hint="City"
        android:text="Pressure"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:hint="City"
        android:text="Status"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="238dp"
        android:layout_below="@+id/txt_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:hint="City"
        android:text="City"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="182dp"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/txt_status" />

    <Spinner
        android:id="@+id/sp_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:contextClickable="false"
        />

</RelativeLayout>
